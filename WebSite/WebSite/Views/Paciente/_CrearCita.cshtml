

<form>
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <div class="card card-register mx-auto mt-5">
                    <div class="card-header bg-primary">Datos personales</div>
                    <div class="card-body">
                        <div class="form-group">
                            <div class="form-row">
                                <div class="col-md-6">
                                    <label>Nombre *</label>
                                    <input class="form-control" id="txbNombre" name="txbNombre" type="text" placeholder="Nombre" autocomplete="on">
                                </div>
                                <div class="col-md-6">
                                    <label>Apellidos *</label>
                                    <input class="form-control" id="txbApellidos" name="txbApellidos" type="text" placeholder="Apellidos" autocomplete="on">
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="form-row">
                                <div class="col-md-6">
                                    <label>Teléfono *</label>
                                    <input class="form-control" id="txbTelefono" name="txbTelefono" type="number" placeholder="Teléfono" autocomplete="on">
                                </div>
                                <div class="col-md-6">
                                    <label>Correo electrónico *</label>
                                    <input class="form-control" id="txbCorreo" name="txbCorreo" type="email" placeholder="Correo" autocomplete="on">
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="form-row">
                                <div class="col-md-12">
                                    <label>Identificación *</label>
                                    <input class="form-control" type="number" id="txbIdentificacion" name="txbIdentificacion" placeholder="Cédula o pasaporte" autocomplete="on">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card card-register mx-auto mt-5">
                    <div class="card-header bg-primary">Horario</div>
                    <div class="card-body">
                        <div class="form-group">
                            <div class="form-row">
                                <div class="col-md-4">
                                    <label>Mes *</label>
                                    <input type="text" class="form-control" id="txbMes" name="txbMes" value="" readonly />
                                </div>

                                <div class="col-md-4">
                                    <label>Día *</label>
                                    <select id="ddlDias" name="ddlDias" class="form-control" onchange="obtenerSesionesActivas();"></select>
                                </div>
                                <div class="col-md-4">
                                    <label>Hora cita *</label>
                                    <select id="ddlHoras" name="ddlHoras" class="form-control"></select>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="container mt-5">
                    <div class="row">
                        <div class="col-md-4">
                        </div>
                        <div class="col-md-4">
                            <button type="submit" onclick="crearCita(); return false;" class="btn btn-primary btn-block">Enviar cita</button>
                        </div>
                        <div class="col-md-4">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>