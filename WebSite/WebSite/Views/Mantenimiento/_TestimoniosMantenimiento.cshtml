<!DOCTYPE html>
<html lang="en">

<head>
    @Styles.Render("~/Template/vendor/datatables/dataTables.bootstrap4.css")
    @Styles.Render("~/Template/css/sb-admin.css")
    @Styles.Render("~/Content/bootstrap-datepicke.css")
    @Styles.Render("~/Content/bootstrap-datepicke.css")
    @Styles.Render("~/Content/bootstrap-clockpicker.min.css")
</head>
<body class="fixed-nav sticky-footer bg-dark" id="page-top">
    <input type="hidden" id="hdfTestimonioId">

    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="#">Testimonios</a>
        </li>
        <li class="breadcrumb-item active">Listado</li>
    </ol>
    <div class="container mb-3 mt-3">
        <div class="row">
            <div class="col-md-5">

            </div>
            <div class="col-md-5">

            </div>
            <div class="col-md-2">
                <button type="button" class="btn btn-primary btn-bloc" data-toggle="modal" onclick="mostrarMantenimientoTestimonioCrear();">Nuev testimonio</button>
            </div>
        </div>
    </div>

    <!-- Example DataTables Card-->
    <div class="card mb-3">
        <div class="card-header">
            @*AREA PARA FILTROS*@
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <div id="divGridTestimonios"></div>
            </div>
        </div>
        <div class="card-footer small text-muted"></div>
    </div>
    <div class="modal fade" id="popUpEliminarTestimonio" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="lblTituloPopUp">Eliminar testimonio</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="container">
                        <div class="row">
                            <div class="col-md-12">
                                <label id="lblAEliminar"></label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                    <button type="button" class="btn btn-primary" onclick="mantenimientoTestimonio()">Eliminar</button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="popUpMantenimientoTestimonio" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="lblTituloMantenimiento">Información del usuario</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <div class="form-row">
                            <div class="col-md-6">
                                <label>Título *</label>
                                <input id="txbTitulo" class="form-control" value="" />
                            </div>
                            <div class="col-md-6">
                                <label>Fecha *</label>
                                <input id="txbFecha" type="text" class="form-control" data-date-format="dd/mm/yyyy" value="" readonly />
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="form-row">

                            <div class="col-md-6">
                                <label>Activo</label>
                                <label class="containerCheck">
                                    <input id="checkActivo" type="checkbox" checked="checked">
                                    <span class="checkmark"></span>
                                </label>
                            </div>

                            <div class="col-md-6">
                               
                            </div>




                        </div>
                    </div>

                    <div class="form-group">
                        <div class="form-row">
                            <div class="col-md-12">
                                <label>Descripción *</label>
                                <textarea id="txaDescripcion" rows="6" class="form-control"></textarea>
                            </div>

                        </div>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                        <button type="button" class="btn btn-primary" onclick="mantenimientoTestimonio()">Guardar</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @Scripts.Render("~/Template/vendor/datatables/jquery.dataTables.js")
    @Scripts.Render("~/Template/vendor/datatables/dataTables.bootstrap4.js")
    @Scripts.Render("~/Template/js/sb-admin.min.js")
    @Scripts.Render("~/Template/js/sb-admin-datatables.min.js")
    @Scripts.Render("~/Scripts/bootstrap-datepicker.js")
    @Scripts.Render("~/Scripts/bootstrap-clockpicker.min.js")
    @Scripts.Render("~/Scripts/Mantenimiento/testimonios.js")
    <script>
		$( document ).ready( function ()
		{
			$( "#txbFecha" ).datepicker();
			$( '.clockpicker' ).clockpicker();

		} );
    </script>
</body>
</html>

