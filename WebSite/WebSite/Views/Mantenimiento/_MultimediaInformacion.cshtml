@model List<Modelo.Mantenimiento.MultimediaInformacionModelo>


<input type="hidden" id="hdfMultimediaId">


<table id="example" class="table table-striped table-hover table-bordered">
	<thead>
		<tr>
			<th></th>
			<th>Tipo archivo</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model.ToList())
		{
			bool esTipoImagen = item.Tipo == (int)Utiles.Archivos.Imagen;
			string tipoImagen = esTipoImagen ? "Imágen" : "Video youtube";

			<tr>
				<td><i class="fa fa-trash-o" style="font-size: x-large;color:red;cursor: pointer;" aria-hidden="true" onclick="mostrarPopUpMultimediaEliminar(@item.MultimediaInformacionId, '@tipoImagen');"></i></td>
				@if (esTipoImagen)
				{
					<td>@tipoImagen</td>
					<td width="50%">
						<img src="@item.ConversionImagen" width="50%" class="imagenCentrada" />
					</td>
				}
				else
				{
					<td>@tipoImagen</td>
					<td width="50%">
						<iframe width="90%" height="86%" src="@item.Ruta"></iframe>
					</td>
				}
			</tr>
		}
	</tbody>
</table>


<script type="text/javascript">

	$( document ).ready( function ()
	{
		$( '#example' ).DataTable( {
			"lengthMenu": [[5], [5]]
		} );
	} );
</script>